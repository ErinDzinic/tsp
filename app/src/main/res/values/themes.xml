<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Tsp" parent="android:Theme.Material.Light.NoActionBar" />
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background to black -->
        <item name="windowSplashScreenBackground">#5E33AC</item>
        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated drawable. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/bg2x</item>
        <!-- Set the theme of the Activity that follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.Tsp</item>
    </style>
</resources>